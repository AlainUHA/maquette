{% extends 'base.html.twig' %}

{% block title %}{{ parcours.titre }}{% endblock %}

{% block body %}
        <h1>{{ parcours.titre }}</h1>
{{ form(form) }}
    <form action="{{ path('parcours.supprimer', {'id': parcours.id}) }}" method="post">
                <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="token" value="{{ csrf_token('delete' ~ parcours.id) }}">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>

{% endblock %}
