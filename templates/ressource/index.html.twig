{% extends 'base.html.twig' %}

{% block title %}Les ressources{% endblock %}

{% block body %}
    <h1>Les ressources</h1>
    <p>
        <a class="btn btn-primary" href="{{ path('ressource.creer',{id:mention.id}) }}">Créer une ressource</a>
        <a class="btn btn-secondary" href="{{ path('mention.voir',{id:mention.id}) }}">Retour</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Libellé</th>
                <th>Niv</th>
                <th>Commun Mention</th>
                <th>CI</th>
                <th>CM</th>
                <th>TD</th>
                <th>TP</th>
                <th>Hybride</th>
                <th>Projet Autonomie</th>
                <th>Expr</th>
                <th>TEDS</th>
                <th>MTU</th>
                <th>Pro</th>
                <th>Internationale</th>
                <th>PIX</th>
                <th>Informationnelle</th>
                <th>VSSH</th>
                <th>Num</th>
                <th>Recherche</th>
                <th>Collab</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ressource in ressources %}
                <tr>
                    <td>{{ ressource.libelle }}</td>
                    <td>{{ ressource.niveau }}</td>
                    <td>{{ ressource.commun }}</td>
                    <td>{{ ressource.ci }}</td>
                    <td>{{ ressource.cm }}</td>
                    <td>{{ ressource.td }}</td>
                    <td>{{ ressource.tp }}</td>
                    <td>{{ ressource.hybride }}</td>
                    <td>{{ ressource.projetAutonomie }}</td>
                    <td>{{ ressource.ctExpression }}</td>
                    <td>{{ ressource.ctTeds }}</td>
                    <td>{{ ressource.ctMtu }}</td>
                    <td>{{ ressource.ctProfessionnelle }}</td>
                    <td>{{ ressource.ctInternationale }}</td>
                    <td>{{ ressource.ctNumeriquePix }}</td>
                    <td>{{ ressource.ctInformationnelle }}</td>
                    <td>{{ ressource.vssh }}</td>
                    <td>{{ ressource.ctNumerique }}</td>
                    <td>{{ ressource.ctRecherche }}</td>
                    <td>{{ ressource.ctCollaboratif }}</td>
                    <td>
                        <a href="{{ path('ressource.modifier', {'id': ressource.id}) }}"><i class="bi bi-pencil-square" style="color:black;"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block debug %}

{% endblock %}
